{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "invoice",
  "description": "JSON representation of an invoice for further processing",

  "definitions": {
    "address": {
      "properties": {
        "name": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "zip": {
          "type": "string"
        },
        "city": {
          "type": "string"
        }
      },
      "required": ["name", "city", "street", "zip"],
      "additionalProperties": false
    },
    "item": {
      "properties": {
        "name": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "vatType": {
          "type": "string",
          "enum": ["full", "reduced", "none"]
        },
        "itemPrice": {
          "type": "number"
        },
        "positionSum": {
          "type": "number"
        }
      },
      "required": ["name", "amount", "itemPrice", "positionSum", "vatType"],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "invoiceNumber": {
      "description": "unique identifier of this invoice",
      "type": "number"
    },
    "billingAddress": {
      "type": "object",
      "$ref": "#/definitions/address"
    },
    "invoiceAddress": {
      "type": "object",
      "$ref": "#/definitions/address"
    },
    "paymentMethod": {
      "type": "string",
      "enum": ["credit card", "invoice", "surname"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "#/definitions/item"
      }
    },
    "totalSumNetto": {
      "type": "number"
    },
    "partialSumFull": {
      "type": "number"
    },
    "partialSumReduced": {
      "type": "number"
    },
    "totalSumBrutto": {
      "type": "number"
    }
  },
  "required": ["billingAddress", "invoiceAddress", "invoiceNumber", "items", "partialSumFull", "partialSumReduced", "paymentMethod", "totalSumBrutto", "totalSumNetto"],
  "additionalProperties": false
}